#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Validate environment configuration before commit
echo "ğŸ” Checking environment configuration..."

# Check if environment files are being committed
if git diff --cached --name-only | grep -q "src/environments/"; then
  echo "ğŸ“ Environment files detected in commit, validating..."
  
  # Run validation script
  node scripts/validate-env.js
  
  if [ $? -ne 0 ]; then
    echo "âŒ Commit aborted: Environment validation failed!"
    echo "Fix the errors and try again."
    exit 1
  fi
fi

echo "âœ… Pre-commit checks passed!"
